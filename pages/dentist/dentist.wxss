/* pages/dentist/dentist.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 50rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.container{
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  flex: 1;
  min-height: 100%;
  font-size: 32rpx;
}

.body{
  position: relative;
  padding-top: 26rpx;
  padding-bottom: 26rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  overflow: hidden;
}

.item{
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 30rpx 70rpx;
  background-color: #fff;
  overflow: hidden;
  border: 3rpx solid #ddd;
  border-radius: 5rpx;
  cursor: pointer;
  align-items: center;
  flex-direction: row;
}

.info-name{
  flex: 1;
}

.info-img{
  width: 60rpx;
  height: 60rpx;
}
