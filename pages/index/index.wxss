/* pages/index/index.wxss */
.container {
  background-color: white;
}

.resume {
  display: flex;
  margin: 9rpx;
  width: 730rpx;
  height: 320rpx;
  flex-direction: row;
  border: 3rpx solid #777;
  border-radius: 5rpx;
}

.photo {
  margin: 10rpx;
  width: 300rpx;
  height: 300rpx;
}

.intro {
  margin: 20rpx;
  width: 370rpx;
  height: 280rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 30rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:6;
}

.btn{
  width: 330rpx;
  height: 80rpx;
  margin: 10rpx;
  background-color: #eee;
  border: 3rpx solid #ccc;
  border-radius: 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.func{
  width: 700rpx;
  height: 120rpx;
  margin: 15rpx 25rpx;
  font-size: 36rpx;
  display: flex;
  flex-direction: row;
}

.time-line{
  width: 710rpx;
  padding-top: 0rpx;
  padding-bottom: 20rpx;
  background: #fff;
  margin: 0 auto;
  border-radius: 10rpx;
}

.timeline-single-close {
  width: 100%;
  height: 122rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}

.timeline-single-noReach-online-top-close {
  display: flex;
  flex-direction: column;
}

.online-top {
  width: 1rpx;
  height: 100rpx;
  background: #999;
  margin-left: 95rpx;
}

.online-top-start {
  width: 1rpx;
  height: 100rpx;
  /* background: #999; */
  margin-left: 95rpx;
}

.dot-close {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  margin-left: 90rpx;
  margin-top: 6rpx;
  margin-bottom: 6rpx;
  background: #999;
}

.online-bottom {
  width: 1rpx;
  height: 100rpx;
  background: #999;
  margin-left: 95rpx;
}

.online-bottom-close {
  width: 1rpx;
  height: 100rpx;
  /* background: #999; */
  margin-left: 95rpx;
}

.timeline-text {
  width: 560rpx;
  margin-left: 30rpx;
}

.timeline-title {
  font-size: 28rpx;
  color: rgb(0, 0, 0);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.timeline-content {
  font-size: 24rpx;
  color: #999;
  display: -webkit-box;
  word-break: break-all;
  white-space: normal;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2
}

.timeline-date {
  position: absolute;
  height: 100%;
  left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #999;
}

.timeline-date-year {
  font-size: 26rpx;
}

.timeline-date-time {
  font-size: 22rpx;
}
