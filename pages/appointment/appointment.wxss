/* pages/setAppointment/setAppointment.wxss */
.date-show{
  position: relative;
  width: 320rpx;
  font-family: PingFang-SC-Regular;
  font-size: 40rpx;
  color: #282828;
  text-align: center;
  margin: 50rpx auto 10rpx;
}

.lt-arrow, .rt-arrow{
  position: absolute;
  top: 5rpx;
  width: 60rpx;
  height: 60rpx;
}

.lt-arrow image,.rt-arrow image{
  width: 45rpx;
  height: 45rpx;
}

.lt-arrow{
  left: -100rpx;
}

.rt-arrow{
  right: -100rpx;
}

.arrow-hover{
  background-color: #ddd;
}

.header{
  font-size: 0;	
  padding: 0 24rpx;
}

.weekMark{
  position: relative;
  display: inline-block;
  width: 14.285%;
  color: #333;
  font-size: 30rpx;
  text-align: center;
  border-bottom: 3px double #D0D0D0;
  padding: 39rpx 0;
}

.date-box{
  font-size: 0;
  padding: 10rpx 0;
}

.date-box>view{
  position: relative;
  display: inline-block;
  width: 14.285%;
  color: #020202;
  font-size: 36rpx;
  text-align: center;
  vertical-align: middle;
  margin: 10rpx 0;
}

date{
  height: 70rpx;
  width: 70rpx;
  line-height: 70rpx;
}

.nowDay .date{
  height: 60rpx;
  width: 60rpx;
  line-height: 58rpx;
  border-radius: 10%;
  border: 2px solid orangered;
  text-align: center;
  margin: 0 auto;
}

.date-set{
  height: 70rpx;
